                    },
                    "400": {
                        "description": "Invalid payload",
                        "schema": {
                            "$ref": "#/definitions/response.GeneralError"
                        }
                    },
                    "404": {
                        "description": "Requested user not found",
                        "schema": {
                            "$ref": "#/definitions/response.GeneralError"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/response.GeneralError"
                        }
                    }
                }
            }
        },
