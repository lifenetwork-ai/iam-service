                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "ID of the account making the request",
                        "name": "requesterAccountID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Payload containing the reason for rejection",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
