                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "data-access"
                ],
                "summary": "Get pending data access requests",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bearer access token (e.g., 'Bearer \u003ctoken\u003e')",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of pending data access requests",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/dto.DataAccessRequestDTO"
                            }
